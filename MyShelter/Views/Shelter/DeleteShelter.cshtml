@model Shelter
@{
    ViewData["Title"] = "Видалити Об'єкт";
    Layout = "_Layout";
var photoPath = "/Images/"+Model.Image;}
@using Data_Access_Layer.Entities
@using MyShelter.ViewModels



<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
               <div class="LogInForm card"  style="border-radius: 15px; border-width:2px;border-color:#0e6ccd;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center mb-4" style="color: #0e6ccd;">Видалити об'єкт міста?</h2>

                        <form enctype="multipart/form-data" method="post" asp-controller="Shelter" asp-action="DeleteShelter">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="id" />
                            <div class="form-outline mb-2">
                                <label style="color: #0e6ccd;" class="form-label" for="form3Example1cg">Назва об'єкта</label>
                                <input style="border-width:2px;" type="text" id="form3Example1cg" class="form-control form-control-lg" asp-for="ShelterName" disabled/>
                            </div>
 
                            <div class="form-outline mb-2">
                            <img class="gjpke" src="@photoPath" width="100%" object-fit="cover" aspect-ratio ="1/1">
                            </div>

                            <div class="d-flex justify-content-end">
                               <a class="btn btn-primary " style="background-color: white; color:#0e6ccd;" asp-controller="Shelter" asp-action="GetAllShelters">Скасувати</a>
                                <input type="submit" class="btn bg-danger text-white" style="margin-left:10px;" name="delete" value="Видалити" />
                            </div>
      
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
