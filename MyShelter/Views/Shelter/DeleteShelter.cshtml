@model Shelter
@{
    ViewData["Title"] = "Delete Shelter";
    Layout = "_Layout";
var photoPath = "/Images/"+Model.Image;}
@using Data_Access_Layer.Entities
@using MyShelter.ViewModels



<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="CreateCourseForm card"  style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center text-white mb-4">Delete Facility</h2>

                        <form enctype="multipart/form-data" method="post" asp-controller="Shelter" asp-action="DeleteShelter">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="id" />
                            <div class="form-outline mb-2">
                                <label class="form-label text-white" for="form3Example1cg">Shelter Name</label>
                                <input type="text" id="form3Example1cg" class="form-control form-control-lg" asp-for="ShelterName" disabled/>
                            </div>
 
                            <div class="form-outline mb-2">
                            <img class="gjpke" src="@photoPath" width="100%" object-fit="cover" aspect-ratio ="1/1">
                            </div>

                            <div class="d-flex justify-content-end">
                                <a class="CancelButton text-white" asp-area="" asp-controller="Shelter" asp-action="GetAllShelters">Cancel</a>
                                <input type="submit" class="SaveCourseButton btn text-white" name="delete" value="Delete" />
                            </div>
      
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
