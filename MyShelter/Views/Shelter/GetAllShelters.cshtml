@using Data_Access_Layer.Entities
@model IEnumerable<Data_Access_Layer.Entities.Shelter>
@{
    ViewData["Title"] = "Shelters";
    Layout = "_Layout";
    IEnumerable<Category> categAv = ViewData["AvailebleCategories"] as System.Collections.Generic.IEnumerable<Category>;
  
}




<div class="manage course content" style="width:74%;">

<section class="search-sec">
    <div class="container">
        <form action="#" method="post" novalidate="novalidate">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-5 col-md-3 col-sm-12 p-0">
                            <input type="text" class="form-control search-slt" placeholder="Enter City" >
                        </div>
                      
                        <div class="col-lg-5 col-md-3 col-sm-12 p-0">

                            <select class="form-control search-slt" asp-for"">
                                <option>Choose Category</option>
                                    @foreach(var item in categAv)
                                    {
                                       <option>
                                       <p style="font-family:Arial;">@item.name</p>
                                       </option>
                                    }   
                            </select>
                       
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-12 p-0">
                            <a class="btn btn-primary wrn-btn text-white" style="padding: 10px;" asp-action"GetAllShelters">Search</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
   
        

    
    



    <a class="btn btn-primary text-white" asp-controller="Shelter" asp-action="CreateShelter">Create Facility</a>
    @{
        int num = 0;
        foreach(var shelter in Model)
        {
            num++;
 
<div class="courseDetails d-flex flex-row" style="border-width:1px;">
    <img class="ShelterFirstSqImg" src="~/Images/@shelter.Image" />
    <div class="d-flex flex-column"  style="">
  <div class="p-0"><h2 class="CourseName "><b>@shelter.ShelterName</b></h2></div>
  <div class="LocationName p-1">@shelter.City , @shelter.Street</div>
  <div class="p-1">@shelter.ShelterShortDescription</div>
  <div class="d-flex flex-row">

  <div class=" d-flex p-1 align-self-end" style="margin-bottom:12px;">
      <a class="btn btn-primary text-white" asp-controller="Shelter" asp-action="EditShelter" role="button" asp-route-id="@shelter.id" style="width:80px;">Edit</a>
       <a class="btn btn-primary text-white" asp-controller="Shelter" asp-action="DeleteShelter" role="button" asp-route-id="@shelter.id"  style="margin-left:10px; width:80px;">Delete</a>
       <a class="btn btn-primary text-white" asp-controller="Shelter" asp-action="ShelterDetails" role="button" asp-route-id="@shelter.id"  style="margin-left:10px; width:80px;">Details</a>
  </div>
  
</div>

</div>
  
</div>
        }
    }
</div>